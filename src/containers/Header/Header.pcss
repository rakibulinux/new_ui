.headerDesktop-screen {
	background: rgb(49, 52, 69);
	color: white;
	padding: 1rem 0.5rem;

	.container-header {
		margin: 0 20px;
	}

	img {
		display: block;
		width: 180px;
	}

	a {
		outline: none;
		text-decoration: none !important;
	}

	.custom-poiter {
		cursor: pointer;
	}

	.header {
		&__left-menu {
			&__logo {
				padding-right: 10px;
			}

			&__dropdown {
				&--mg-large {
					margin-left: 25px;
					margin-right: 25px;

					@media screen and (max-width: 1200px) {
						margin-left: 15px;
						margin-right: 15px;
					}
				}

				margin-right: 20px;

				&__wrap {
					display: inline-block;
					position: relative;
					text-decoration: none;

					&--active {
						a {
							color: rgb(47, 182, 126) !important;
						}
					}

					&__dropbtn {
						border: none;
						color: white;
						font-size: 16px;

						&::before {
							background-color: #fff;
							content: '';
							height: 60px;
							opacity: 0;
							position: absolute;
							width: 100%;
							z-index: 10;
						}

						&__svg {
							svg {
								color: white !important;
								height: 32px;
								width: 32px;
							}
						}

						&__tag-icon {
							-webkit-align-items: center;
							align-items: center;
							background-color: rgb(47, 182, 126);
							border-radius: 5px;
							-webkit-box-align: center;
							box-sizing: border-box;
							color: #212822;
							display: -webkit-box;
							display: -webkit-flex;
							display: -ms-flexbox;
							display: flex;
							-ms-flex-align: center;
							font-size: 12px;
							height: 18px;
							line-height: 16px;
							margin-left: 8px;
							max-width: 33px;
							position: relative;
							transform: translateY(0);

							&::before {
								border-bottom: 8px solid rgb(47, 182, 126);
								border-left: 7px solid transparent;
								border-right: 7px solid transparent;
								content: '';
								position: absolute;
								transform: rotate(-90deg) translateY(-12px);
								z-index: -10;
							}
						}

						&__icon-drop-down {
							border-bottom: 6px solid rgba(253, 253, 253, 0.788);
							border-left: 4px solid transparent;
							border-right: 4px solid transparent;
							margin-left: 5px;
							transform: rotate(180deg);
							transition: all 0.4s;
						}
					}

					&__content {
						background-color: rgb(41, 45, 63);
						box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
						display: none;
						margin-top: 33px;
						min-width: 280px;
						position: absolute;
						z-index: 100;

						a {
							color: white;
							display: block;
							font-size: 16px;
							padding: 20px 16px;
							text-decoration: none !important;
						}
					}

					&__content a:hover {
						background-color: rgb(49, 52, 69);
						color: rgb(47, 182, 126) !important;
					}

					&__content link:hover {
						background-color: rgb(49, 52, 69);
						color: rgb(47, 182, 126) !important;
					}

					&:hover .header__left-menu__dropdown__wrap__content {
						display: block;
					}

					&:hover .header__left-menu__dropdown__wrap__dropbtn {
						color: rgb(47, 182, 126) !important;
					}

					&:hover .header__left-menu__dropdown__wrap__dropbtn__icon-drop-down {
						transform: rotate(0deg);
					}
				}

				@media screen and (max-width: 1200px) {
					margin-right: 10px;
				}
			}
		}

		&__right-menu {
			&__dropdown {
				&--mg-large {
					margin-left: 30px;
					margin-right: 30px;
				}

				&__wrap {
					display: inline-block;
					margin-right: 20px;
					position: relative;

					&__dropbtn {
						border: none;
						color: white;
						font-size: 16px;
						outline: none;
						text-decoration: none !important;

						&::before {
							background-color: #fff;
							content: '';
							height: 60px;
							opacity: 0;
							position: absolute;
							width: 100%;
							z-index: 10;
						}

						&--active {
							color: rgb(47, 182, 126) !important;
						}

						&__svg {
							svg {
								color: white !important;
								height: 32px;
								width: 32px;
							}
						}

						&__icon-drop-down {
							border-bottom: 6px solid rgba(253, 253, 253, 0.788);
							border-left: 4px solid transparent;
							border-right: 4px solid transparent;
							margin-left: 5px;
							transform: rotate(180deg);
							transition: all 0.4s;
						}
					}

					&__content {
						&--account {
							min-width: 100px;
						}

						&__title {
							&__icon {
								font-size: 20px;
							}
						}

						background-color: rgb(41, 45, 63);
						box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
						display: none;
						left: 50% !important;
						margin-top: 18px;
						min-width: 150px;
						position: absolute;
						right: auto !important;
						text-align: center !important;
						transform: translate(-50%, 0) !important;
						z-index: 100;

						a {
							color: white;
							display: block;
							font-size: 16px;
							padding: 20px 16px;
							text-decoration: none !important;
						}

						link {
							color: white;
							display: block;
							padding: 20px 16px;
							text-decoration: none !important;
						}
					}

					&__content link:hover {
						background-color: rgb(49, 52, 69);
						color: rgb(47, 182, 126) !important;
					}

					&__content a:hover {
						background-color: rgb(49, 52, 69);
						color: rgb(47, 182, 126) !important;
					}

					&:hover .header__right-menu__dropdown__wrap__content {
						display: block;
					}

					&:hover .header__right-menu__dropdown__wrap__dropbtn {
						color: rgb(47, 182, 126) !important;
						outline: none !important;
						text-decoration: none !important;
					}

					&:hover .header__right-menu__dropdown__wrap__dropbtn__icon-drop-down {
						transform: rotate(0deg);
					}

					@media screen and (max-width: 1200px) {
						margin-right: 10px;
					}
				}
			}

			&__item {
				&__title {
					a,
					span {
						color: white;
						outline: none;
						text-decoration: none;

						&:hover {
							color: rgb(47, 182, 126);
						}
					}

					link {
						color: white;
						outline: none;
						text-decoration: none;

						&:hover {
							color: rgb(47, 182, 126);
						}
					}

					&--active {
						a,
						span {
							color: rgb(47, 182, 126);
						}
					}

					font-size: 16px;
					margin-right: 20px;

					&--btn {
						background-color: rgb(47, 182, 126);
						border-radius: 5px;
						color: white;
						padding: 6px 16px;

						&:hover {
							background-color: rgb(27, 226, 143);
							color: white;
						}
					}

					&__icon {
						font-size: 20px;
					}

					@media screen and (max-width: 1200px) {
						margin-right: 10px;
					}
				}
			}
		}
	}
}
